{
  "version": "0.1.7",
  "name": "ssid-to-slack-status",
  "description": "Changes your Slack status based on the SSID you're currently connected to.",
  "productName": "SSID to Slack status",
  "productUrl": "https://github.com/kirbo/ssid-to-slack-status/releases",
  "build": {
    "appId": "com.github.kirbo.ssid-to-slack-status",
    "asar": true,
    "files": [
      "**/*",
      "!*.*",
      "!data/",
      "!dist/",
      "!build/",
      "!src/",
      ".env",
      "src/utils/**",
      "index.js",
      "package.json"
    ],
    "extraFiles": [
      "executables/**",
      "utils/**"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    }
  },
  "main": "./index.js",
  "scripts": {
    "update": "node --harmony executables/update.js update",
    "force-update": "node --harmony executables/update.js force-update",

    "start": "./node_modules/.bin/electron .",
    "dev": "DEV=true ./node_modules/.bin/electron .",
    "watch": "./node_modules/.bin/webpack --watch",

    "copy-utils": "cp -R src/utils utils",
    "delete-utils": "rm -rf utils",

    "build": "NODE_ENV=production ./node_modules/.bin/webpack",
    "build-fast": "./node_modules/.bin/webpack",

    "pack": "npm run copy-utils && build --dir && npm run delete-utils",
    "dist": "npm run copy-utils && build && npm run delete-utils",
    "release": "npm run copy-utils && export $(cat .env | xargs) && build && npm run delete-utils",

    "create": "npm run build && npm run pack",
    "create-fast": "npm run build-fast && npm run pack",
    "create-dist": "npm run build && npm run dist",
    "create-release": "export $(cat .env | xargs) && npm run build && npm run release",

    "postinstall": "./executables/postinstall.sh"
  },
  "repository": {
    "url": "https://github.com/kirbo/ssid-to-slack-status.git",
    "type": "git"
  },
  "author": "kimmo.saari@sc5.io",
  "license": "MIT",
  "devDependencies": {
    "antd": "2.9.3",
    "babel-core": "6.24.1",
    "babel-loader": "7.0.0",
    "babel-plugin-import": "1.1.1",
    "babel-polyfill": "6.23.0",
    "babel-preset-babili": "0.0.12",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-es2017": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babili": "0.0.12",
    "babili-webpack-plugin": "0.0.11",
    "css-loader": "0.28.1",
    "electron": "1.6.6",
    "electron-builder": "17.1.1",
    "extract-text-webpack-plugin": "2.1.0",
    "file-loader": "0.11.1",
    "less": "2.7.2",
    "less-loader": "4.0.3",
    "react": "15.5.4",
    "react-dom": "15.5.4",
    "react-fa": "4.1.2",
    "react-intl": "2.2.3",
    "style-loader": "0.17.0",
    "url-loader": "0.5.8",
    "webpack": "2.4.1"
  },
  "dependencies": {
    "body-parser": "1.17.1",
    "debug": "2.6.6",
    "dotenv": "4.0.0",
    "electron-log": "2.2.3",
    "electron-react-devtools": "0.4.0",
    "electron-updater": "1.14.2",
    "express": "4.15.2",
    "express-session": "1.15.2",
    "node-emoji": "1.5.1",
    "node-wifi": "git+https://github.com/kirbo/node-wifi.git",
    "request": "2.81.0",
    "slack": "8.3.0",
    "socket.io": "1.7.3",
    "socket.io-client": "1.7.3",
    "uuid": "3.0.1"
  }
}
