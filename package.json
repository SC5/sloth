{
  "version": "0.1.0-alpha",
  "name": "ssid-to-slack-status",
  "description": "Changes your Slack status based on the SSID you're currently connected to.",
  "productName": "SSID to Slack status",
  "productUrl": "",
  "build": {
    "appId": "com.electron.ssid-to-slack-status",
    "asar": false,
    "files": [
      "**/*",
      "!*.*",
      "!data/",
      "!dist/",
      "!build/",
      "!src/",
      ".env",
      "executables/**",
      "src/utils/**",
      "index.js",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    }
  },
  "main": "./index.js",
  "scripts": {
    "upgrade": "npm install && npm prune && echo 'Dependencies upgraded' && crontab -l 2> /dev/null | grep -q '# ssid-to-slack-status' && npm run crontab-reinstall || exit 0",
    "update": "node --harmony executables/update.js update",
    "force-update": "FORCE_UPDATE=true node --harmony executables/update.js force-update",
    "crontab": "node --harmony src/executables/crontab.js",
    "crontab-install": "node --harmony src/executables/crontab.js install",
    "crontab-uninstall": "node --harmony src/executables/crontab.js uninstall",
    "crontab-reinstall": "node --harmony src/executables/crontab.js reinstall",
    "start": "./node_modules/.bin/electron .",
    "dev": "DEV=true ./node_modules/.bin/electron .",
    "watch": "./node_modules/.bin/webpack --watch",
    "build": "NODE_ENV=production ./node_modules/.bin/webpack",
    "build-fast": "./node_modules/.bin/webpack",
    "build-and-run-electron": "npm run build && npm run start",
    "pack": "build --dir",
    "dist": "build",
    "release": "build",
    "create-app": "npm run build && npm run pack",
    "create-app-dist": "npm run build && npm run dist",
    "create-app-release": "export $(cat .env | xargs) && npm run build && npm run release"
  },
  "repository": {
    "url": "https://github.com/kirbo/ssid-to-slack-status.git",
    "type": "git"
  },
  "author": "kimmo.saari@sc5.io",
  "license": "MIT",
  "devDependencies": {
    "antd": "2.9.3",
    "babel-core": "6.24.1",
    "babel-loader": "7.0.0",
    "babel-plugin-import": "1.1.1",
    "babel-polyfill": "6.23.0",
    "babel-preset-babili": "0.0.12",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-es2017": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babili": "0.0.12",
    "babili-webpack-plugin": "0.0.11",
    "css-loader": "0.28.0",
    "electron": "1.6.6",
    "electron-builder": "17.1.1",
    "extract-text-webpack-plugin": "2.1.0",
    "file-loader": "0.11.1",
    "less": "2.7.2",
    "less-loader": "4.0.3",
    "react": "15.5.4",
    "react-dom": "15.5.4",
    "react-fa": "4.1.2",
    "react-intl": "2.2.3",
    "style-loader": "0.17.0",
    "url-loader": "0.5.8",
    "webpack": "2.4.1"
  },
  "dependencies": {
    "body-parser": "1.17.1",
    "dotenv": "4.0.0",
    "electron-react-devtools": "0.4.0",
    "express": "4.15.2",
    "express-session": "1.15.2",
    "node-emoji": "1.5.1",
    "node-wifi": "git+https://github.com/kirbo/node-wifi.git",
    "request": "2.81.0",
    "slack": "8.3.0",
    "socket.io": "1.7.3",
    "socket.io-client": "1.7.3",
    "uuid": "3.0.1"
  }
}
