{
  "version": "0.7.0",
  "name": "sloth",
  "description": "Changes your Slack status based on the SSID you're currently connected to.",
  "productName": "Sloth",
  "productUrl": "https://github.com/kirbo/sloth/releases",
  "build": {
    "appId": "com.github.kirbo.sloth",
    "asar": true,
    "files": [
      ".express.env",
      "node_modules/**",
      "app/assets/**",
      "app/dist/**",
      "app/src/utils/**",
      "app/views/**",
      "app/index.js"
    ],
    "extraFiles": [
      "bash/**"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "protocols": [
      {
        "name": "sloth",
        "role": "Viewer",
        "schemes": [
          "sloth"
        ]
      }
    ]
  },
  "main": "./app/index.js",
  "scripts": {
    "build": "npm run compile-dev && npm run pack",
    "build-dist": "npm run compile && npm run dist",
    "build-release": "npm run compile && npm run release",
    "compile": "NODE_ENV=production ./node_modules/.bin/webpack",
    "compile-dev": "NODE_ENV=dev ./node_modules/.bin/webpack",
    "dev": "./node_modules/.bin/electron .",
    "dist": "build",
    "lint": "./node_modules/.bin/eslint .",
    "open": "open 'dist/mac/Sloth.app'",
    "pack": "build --dir",
    "postinstall": "./bash/postinstall.sh",
    "release": "export $(cat .release.env | xargs) && build",
    "start": "npm run build && npm run open",
    "watch": "NODE_ENV=dev ./node_modules/.bin/webpack --watch"
  },
  "repository": {
    "url": "https://github.com/kirbo/sloth.git",
    "type": "git"
  },
  "author": "kimmo.saari@sc5.io",
  "license": "MIT",
  "devDependencies": {
    "airbnb-style": "2.0.0",
    "antd": "2.10.0",
    "babel-core": "6.24.1",
    "babel-eslint": "7.2.3",
    "babel-loader": "7.0.0",
    "babel-plugin-import": "1.1.1",
    "babel-polyfill": "6.23.0",
    "babel-preset-babili": "0.0.12",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-es2017": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babili": "0.0.12",
    "babili-webpack-plugin": "0.0.11",
    "css-loader": "0.28.1",
    "electron": "1.6.7",
    "electron-builder": "17.5.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "15.0.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "5.0.1",
    "eslint-plugin-react": "7.0.1",
    "extract-text-webpack-plugin": "2.1.0",
    "file-loader": "0.11.1",
    "less": "2.7.2",
    "less-loader": "4.0.3",
    "prop-types": "15.5.10",
    "react": "15.5.4",
    "react-dom": "15.5.4",
    "react-fa": "4.2.0",
    "react-intl": "2.3.0",
    "style-loader": "0.17.0",
    "url-loader": "0.5.8",
    "webpack": "2.5.1"
  },
  "dependencies": {
    "body-parser": "1.17.1",
    "debug": "2.6.6",
    "dotenv": "4.0.0",
    "electron-log": "2.2.4",
    "electron-updater": "1.15.0",
    "express": "4.15.2",
    "node-emoji": "1.5.1",
    "node-wifi": "https://github.com/kirbo/node-wifi.git",
    "request": "2.81.0",
    "slack": "8.3.1",
    "socket.io": "2.0.1",
    "socket.io-client": "2.0.1",
    "uuid": "3.0.1"
  }
}
